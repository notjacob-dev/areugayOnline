{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "allowJs": false,
    "checkJs": false,
    "jsx": "preserve",
    "outDir": "./app/.build/",
    "rootDir": "./app/server/",
    "removeComments": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true  ,
    "resolveJsonModule": true
  }
}
